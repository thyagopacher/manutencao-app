<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Manutenção Fácil</name>
    <description>
		Uma aplicação para ler qrcode e retornar informações sobre o equipamento em questão na região do Rio de Janeiro
    </description>
    <author email="thyago.pacher@gmail.com" href="https://sitesesistemaspg.com">
        Manutenção Fácil sistema para controle de manutenção de equipamentos online
    </author>
    <preference name="android-build-tool" value="gradle" />
    <preference name="phonegap-version" value="cli-6.5.0" />
    <content src="login.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="fb:*" />
    <allow-intent href="whatsapp:*" />
    <platform name="android">
        <icon density="ldpi" src="www/img/logo.png" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <icon density="ldpi" src="www/img/logo.png" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-camera" spec="^2.4.1" />
    <plugin name="cordova-plugin-compat" spec="^1.1.0" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-dialogs" spec="^1.3.3" />
    <plugin name="cordova-plugin-facebook" spec="^0.2.2">
        <variable name="FACEBOOK_DISPLAY_NAME" value="Manutenção" />
        <variable name="FACEBOOK_APP_ID" value="975126059290829" />
    </plugin>
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="com.phonegap.plugins.barcodescanner" source="pgb" spec="2.0.0" />
    <plugin name="cordova-plugin-barcodescanner" spec="^0.7.4" />
    <engine name="android" spec="^7.1.4" />
    <engine name="browser" spec="^5.0.4" />
</widget>
